        <activity android:name=".ClientView_Activity" />
        <activity android:name=".AddClassActivity" />
        <activity android:name=".RegisterUserActivity" />
        <activity android:name=".UserClasses" />
        <activity android:name=".MainActivity" />

        <receiver android:name=".AlertReceiver">
            <intent-filter>
                <action android:name=".DISPLAY_NOTIFICATION" />
            </intent-filter>
